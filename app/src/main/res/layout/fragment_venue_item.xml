<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@drawable/application_background"
              tools:context="com.oleg.hubal.topfour.venue_item.VenueItemFragment">

    <ImageView
        android:id="@+id/iv_venue_item_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:transitionName="venue_image"/>

    <TextView
        android:id="@+id/tv_venue_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/tv_venue_item_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/tv_venue_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/tv_venue_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>
</LinearLayout>
